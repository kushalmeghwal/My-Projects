<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <style>
        body {
            background-color: #ffcccb;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
       
        }

        .container {
            background: #f5f9f4;;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
            display: flex;
            flex-direction: column;
        }

        h1 {
            text-align: center;
            color: #061627;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #022542;
        }

        input, select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #2196F3;
            border-radius: 5px;
            background: #f8faff;
        }
        
        .form-row {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 10px;
            margin-right: 20px;
        }

        .form-dabba {
            width: 48%;
        }

        .subject-entry {
            display: flex;
            gap: 10px;
            align-items: center;
            margin-bottom: 10px;
        }

        .subject-entry input {
            flex: 1;
        }

        #add-subject {
            background: #2196F3;
            color: white;
            border: none;
            width: 80px;
            height: 30px;
            font-size: 20px;
            font-weight: bold;
            border-radius: 10px;
            cursor: pointer;
        }

        .buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .buttons button {
            width: 48%;
            padding: 10px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            border: none;
            border-radius: 5px;
            color: white;
        }

        #create-profile {
            background: #ffcccb;
        }

        #create-profile:hover {
            background: #f4a7a6;
        }

        #submitBtn {
            background: #2196F3;
        }

        #submitBtn:hover {
            background: #0f72c3;
        }

        .lamba-dabba {
            margin-top: 15px;
            margin-right: 23px;
        }

        .lamba-dabba input {
            margin-bottom: 10px;
            padding: 8px;
            background: #f8faff;
            border: 1px solid  #2196F3;
            width: 100%;
            border-radius: 5px;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Let's get to know you better!!</h1>
    <form action="/form" method="POST" id="profileForm" enctype="multipart/form-data">
      
        <div class="form-row">
            <div class="form-dabba">
                <label>Name</label>
                <input type="text" name="name" required>
            </div>
            <div class="form-dabba">
                <label>Roll No</label>
                <input type="text" name="rollNo" required>
            </div>
        </div>

        <div class="form-row">
            <div class="form-dabba">
                <label>Year</label>
                <input type="text" name="year" required>
            </div>
            <div class="form-dabba">
                <label>Semester</label>
                <input type="text" name="semester" required>
            </div>
        </div>

        <div class="form-row">
            <div class="form-dabba">
                <label>Email</label>
                <input type="email" name="email" required>
            </div>
            <div class="form-dabba">
                <label>Password</label>
                <input type="password" name="password" required>
            </div>
        </div>

        <div class="form-row">
            <div class="form-dabba">
                <label>Phone No</label>
                <input type="tel" name="phone" required>
            </div>
            <div class="form-dabba">
                <label>Address</label>
                <input type="text" name="address" required>
            </div>
        </div>

        <div class="lamba-dabba">
            <label>College</label>
            <input type="text" name="college" required>

            <label>Profile Picture</label>
            <input type="file" name="photo" required>
        </div>

        <label>Subjects & Marks</label>
        <div id="subjects-container"></div>
        <button type="button" id="add-subject">+</button>


        <div class="buttons">
            <button type="button" id="create-profile">Create Profile</button>
            <button type="submit" id="submitBtn">Submit</button>
        </div>
    </form>
</div>

<script>
  
    document.addEventListener("DOMContentLoaded", function () {
        const subjectsContainer = document.getElementById("subjects-container");
        const addSubjectBtn = document.getElementById("add-subject");
        const submitBtn = document.getElementById("submitBtn");
        const createProfileBtn = document.getElementById("create-profile");
        const profileForm = document.getElementById("profileForm");
        let subjectCount = 0;

       
        addSubjectBtn.addEventListener("click", function () {
            if (subjectCount < 5) {
                const subjectEntry = document.createElement("div");
                subjectEntry.classList.add("subject-entry");

                subjectEntry.innerHTML = `
                    <input type="text" name="subject[]" placeholder="Enter Subject" required>
                    <input type="number" name="marks[]" placeholder="Marks" min="0" max="100" required>
                `;

                subjectsContainer.appendChild(subjectEntry);
                subjectCount++;
            }
        });

        profileForm.addEventListener("input", function () {
            let allFieldsFilled = true;
            const allInputs = document.querySelectorAll("input, select");

            
            allInputs.forEach(input => {
                if (input.required && !input.value) {
                    allFieldsFilled = false;
                }
            });

          
            submitBtn.disabled = !allFieldsFilled;
        });


        createProfileBtn.addEventListener("click", function () {
            let allFieldsFilled = true;
            const allInputs = document.querySelectorAll("input, select");

            allInputs.forEach(input => {
                if (input.required && !input.value) {
                    allFieldsFilled = false;
                }
            });

            if (allFieldsFilled) {
                alert("Profile Created Successfully!!");
            } else {
                alert("sari details bharo pahle");
            }
        });
    });
</script>

</body>
</html>
